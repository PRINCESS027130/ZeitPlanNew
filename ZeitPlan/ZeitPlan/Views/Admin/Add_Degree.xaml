<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeitPlan.Views.Admin.Add_Degree">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtDegName" Placeholder="Degree Name" Keyboard="Chat"/>
            <Entry x:Name="txtDegDepartmentFID" Placeholder="DepartmentFID" Keyboard="Numeric"/>
            <Entry x:Name="txtDegClassFID" Placeholder="TBL_ClassFID" Keyboard="Numeric"/>
            <Entry x:Name="txtDegCourseFID" Placeholder="TBL_CourseFID" Keyboard="Numeric"/>
            <Entry x:Name="txtDegCourseAssignFID" Placeholder="TBL_CourseAssignFID" Keyboard="Numeric"/>
            
            <ActivityIndicator x:Name="LoadingInd" IsRunning="False"/>
            <Button x:Name="btnDegree" Text="Add Degree" Clicked="btnDegree_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>