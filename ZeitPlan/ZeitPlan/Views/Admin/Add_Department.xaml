<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeitPlan.Views.Admin.Add_Department"
             Title="Add Department">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtDepartmentName" Placeholder="Department Name" Keyboard="Chat"/>
            
            <ActivityIndicator x:Name="LoadingInd" IsRunning="False"/>
            <Button Text="Add Department" x:Name="btnDepartment" Clicked="btnDepartment_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>